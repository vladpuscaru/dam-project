<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/app_padding">

    <ImageView
        android:id="@+id/adapter_recipe_img"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="@dimen/adapter_recipe_img_height" />

    <TextView
        android:id="@+id/adapter_recipe_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/test_text"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/adapter_recipe_tv_calories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/register_input_margin_left"
            android:layout_marginRight="@dimen/register_input_margin_left"
            android:layout_weight="0.3"
            android:background="@color/colorCalories"
            android:text="@string/test_number"
            android:textAlignment="center"
            android:textSize="@dimen/login_footer_text_size" />

        <TextView
            android:id="@+id/adapter_recipe_tv_carbohydrates"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@color/colorCarbohydrates"
            android:text="@string/test_number"
            android:textAlignment="center"
            android:textSize="@dimen/login_footer_text_size" />

        <TextView
            android:id="@+id/adapter_recipe_tv_fats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@color/colorFat"
            android:text="@string/test_number"
            android:textAlignment="center"
            android:textSize="@dimen/login_footer_text_size" />

        <TextView
            android:id="@+id/adapter_recipe_tv_protein"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@color/colorProtein"
            android:text="@string/test_number"
            android:textAlignment="center"
            android:textSize="@dimen/login_footer_text_size" />


    </LinearLayout>


    <TextView
        android:id="@+id/adapter_recipe_tv_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/register_input_margin_left"
        android:layout_marginRight="@dimen/register_input_margin_left"
        android:text="@string/adapter_recipe_ingredients_label"
        android:textColor="@android:color/black" />

    <ListView
        android:id="@+id/adapter_recipe_lv_ingrdients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/app_padding" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_food_list_divider_height"
        android:background="@color/colorButton" />

    <TextView
        android:id="@+id/adapter_recipe_tv_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>